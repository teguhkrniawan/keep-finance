<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorPrimary">

       <ImageView
           android:id="@+id/income_iv_warna"
           android:layout_width="20dp"
           android:layout_height="100dp"
           android:src="@color/colorPrimaryDark"/>

       <TextView
           android:id="@+id/income_nama_kategori"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:textSize="20sp"
           android:fontFamily="@font/futura_bold"
           android:layout_toEndOf="@id/income_iv_warna"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Nama Kategori"/>

       <TextView
           android:layout_below="@id/income_nama_kategori"
           android:id="@+id/income_nominal_ket"
           android:layout_marginStart="20dp"
           android:textSize="40sp"
           android:textColor="@android:color/white"
           android:fontFamily="@font/futura_bold"
           android:layout_toEndOf="@id/income_iv_warna"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Rp.670.000"/>

   </RelativeLayout>

</RelativeLayout>