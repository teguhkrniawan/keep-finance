<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/expense_iv_warna"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:src="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/expense_nama_kategori"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/futura_bold"
            android:layout_toEndOf="@id/expense_iv_warna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kategori"/>

        <TextView
            android:id="@+id/expense_nominal_ket"
            android:layout_below="@id/expense_nama_kategori"
            android:layout_marginStart="20dp"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/futura_bold"
            android:layout_toEndOf="@id/expense_iv_warna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.670.000"/>

    </RelativeLayout>

</RelativeLayout>